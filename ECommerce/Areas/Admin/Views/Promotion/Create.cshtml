


<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Create new Promotion</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post">
                <div class="mb-3">
                    <label for="Code" class="form-label">Code</label>
                    <input class="form-control" name="Code">
                </div>
                <div class="mb-3">
                    <label for="Discount" class="form-label">Discount</label>
                    <input type="number" class="form-control" name="Discount">
                </div>
                <div class="mb-3">
                    <label for="ValidTo" class="form-label">ValidTo</label>
                    <input type="datetime-local" class="form-control" name="ValidTo">
                </div>
                <div class="mb-3">
                    <label for="ProductId" class="form-label">Product</label>
                    <select name="ProductId" class="form-select">
                        @foreach (var item in ViewBag.products)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
