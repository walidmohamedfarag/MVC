@model UpdateProfileVM

<div class="container">
    <div class="row gutters my-3">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">
                    <div class="account-settings">
                        <div class="user-profile text-center">
                            <div class="user-avatar mb-3">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="User Avatar" style="width: 90px">
                            </div>
                            <h5 class="user-name">@Model.FullName</h5>
                            <h6 class="user-email">@Model.Email</h6>
                        </div>
                        <div class="about">
                            <h5>About</h5>
                            <p>I'm Yuki. Full Stack Designer I enjoy creating user-centric, delightful and human experiences.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">

                    <!-- ✅ Form 1: Update Profile -->
                    <form asp-action="UpdateProfile">
                        <h6 class="mb-2 text-primary">Personal Details</h6>

                        <div class="row gutters">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fullName">Full Name</label>
                                    <input class="form-control" name="FullName" value="@Model.FullName" id="fullName" placeholder="Enter full name">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="eMail">Email</label>
                                    <input disabled name="Email" value="@Model.Email" class="form-control" placeholder="Enter email ID">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone">Phone</label>
                                    <input name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" placeholder="Enter phone number">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Address">Address</label>
                                    <input name="Address" value="@Model.Address" class="form-control" placeholder="Enter Address">
                                </div>
                            </div>
                        </div>

                        <div class="text-right my-3">
                            <button type="reset" class="btn btn-secondary">Cancel</button>
                            <button type="submit" class="btn btn-primary">Update Profile</button>
                        </div>
                    </form>

                    <hr />

                    <!-- ✅ Form 2: Update Password -->
                    <form asp-action="UpdatePassword">
                        <h6 class="mb-2 text-primary">Update Password</h6>

                        <div class="row gutters">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="CurrentPassword">Current Password</label>
                                    <input name="CurrentPassword" value="@Model.CurrentPassword" class="form-control" type="password" placeholder="Enter Current Password">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="NewPassword">New Password</label>
                                    <input name="NewPassword" value="@Model.NewPassword" class="form-control" type="password" placeholder="Enter New Password">
                                </div>
                            </div>
                        </div>

                        <div class="text-right my-3">
                            <button type="submit" class="btn btn-primary">Update Password</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_NotificationPartial" />
}
